<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maui="clr-namespace:MauiPane"
             x:Class="TryDockLayout.MainPage">

    <ScrollView>
        <maui:DockLayout LastChildFill="True">
            <Button maui:DockLayout.Dock="Top" Text="Top" HeightRequest="50" />
            <Button maui:DockLayout.Dock="Left" Text="Left" WidthRequest="50" />
            <Button maui:DockLayout.Dock="Right" Text="Right" WidthRequest="50" />
            <Button maui:DockLayout.Dock="Bottom" Text="Bottom" HeightRequest="50" />
            <Button Text="Fill" />
        </maui:DockLayout>
    </ScrollView>
 
</ContentPage>
